{
  "name": "erp-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "test:update": "jest --updateSnapshot",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:runner": "node scripts/test-runner.js",
    "test:trainee-payments": "jest --config jest.traineePayments.config.js",
    "test:trainee-payments:watch": "jest --config jest.traineePayments.config.js --watch",
    "test:trainee-payments:coverage": "jest --config jest.traineePayments.config.js --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist",
    "preview": "next build && next start"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.1.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/js-cookie": "^3.0.6",
    "framer-motion": "^12.18.1",
    "init": "^0.1.2",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.514.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.58.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-webcam": "^7.2.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  }
}
